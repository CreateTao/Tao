<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/onLineMes"
        android:visibility="gone">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/tl_Message_head"
            app:navigationIcon="@drawable/tool_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="消息"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"/>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_content_message"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/offLineMes"
        android:paddingTop="200dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您还没有登录哦!!"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="点击登录"
            android:background="@color/btn_backgrounp"
            android:textSize="12sp"
            android:id="@+id/btn_login_message"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</LinearLayout>