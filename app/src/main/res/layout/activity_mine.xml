<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="3"
                android:background="@color/btn_backgrounp"
                android:orientation="horizontal">

                <com.xwy.tao_work.mytaowork.widget.MyCircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/default_head"
                    android:id="@+id/iv_mineHead"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲，还没登录哦！"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_mineName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0.0"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:gravity="bottom|center_horizontal"
                        android:id="@+id/tv_mineUserMoney"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="钱包提现"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/space_backgroup"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="我的简历"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_mineUserInt"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/space_backgroup"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="我的工作"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_mineWork"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/space_backgroup"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_mineClssify"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>