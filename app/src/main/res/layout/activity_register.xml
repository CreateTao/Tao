<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/tl_register_head"
        app:navigationIcon="@drawable/tool_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/space_backgroup"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/edit_pressed"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/edit_pressed"
        android:id="@+id/tab_typetext"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_resgister"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>



    

</LinearLayout>